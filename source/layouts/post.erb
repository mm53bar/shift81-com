<% wrap_layout :layout do %>
<section class="content">
  <h1>
    <a href="<%= current_page.url %>"><%= current_page.data.title %></a>
  </h1>

  <section class="byline">
    <%= current_page.date.strftime('%B %e, %Y') %>
  </section>

  <%= yield %>

  <!-- TODO: bio here -->
  <section class="meta">
    <h3>Discussion, links, and tweets</h3>
    <section class="copy">
      <a href="https://twitter.com/<%= settings.twitter %>" target="_blank">
        <img src="<%= settings.gravatar_url %>?s=142" height="50" width="50" />
      </a>

      <p>
        I'm a developer at GitHub. <a href="https://twitter.com/<%= settings.twitter %>" target="_blank">Follow me on Twitter</a>;
        you'll enjoy my tweets. I take care to carefully craft each one. Or at least aim to make
        you giggle. Or offended. One of those two&mdash; I haven't decided which yet.
      </p>

      <a href="http://twitter.com/share" class="twitter-share-button" data-count="none" data-via="<%= settings.twitter %>">Tweet</a>
      <a href="http://twitter.com/<%= settings.twitter %>" class="twitter-follow-button" data-show-count="false">Follow @<%= settings.twitter %></a>
      <script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>
    </section>
  </section>
</section>
<% end %>
